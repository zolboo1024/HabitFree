<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/planNameTextView"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Plan Name Goes Here"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/planTimeTextView"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/planNameTextView"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="68dp"
        android:text="Plan Time Goes Here" />

    <ImageView
        android:id="@+id/planAppsImageVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/planNameTextView"
        android:layout_marginEnd="16dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>